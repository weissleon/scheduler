{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@util/*": ["util/*"],
      "@models/*": ["models/*"],
      "@gql/*": ["gql/*"],
      "@components/*": ["components/*"],
      "@data/*": ["data/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.svg", "**/*.ts", "**/*.tsx", "app/app.js"],
  "exclude": ["node_modules"]
}
